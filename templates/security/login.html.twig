{% extends 'base_login.html.twig' %}

{% block title %}Inicio de sesion{% endblock %}

{% block body %}
    <div class="account-box">
        <div class="account-wrapper">
            <h3 class="account-title">Inicio de sesion</h3>
            <p class="account-subtitle">Accede al sistema</p>

            <!-- Account Form -->
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Error!</strong> Un <a href="#" class="alert-link">Problema</a> {{ error.messageKey|trans(error.messageData, 'security') }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                        </button>
                    </div>
                {% endif %}
                {% if app.user %}
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        <strong>Atencion !</strong> Estas logueado como {{ app.user.userIdentifier }}<a href="{{ path('app_logout') }}" class="alert-link">Cierra sesion</a>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                        </button>
                    </div>
                {% endif %}
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <div class="form-group">
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <label for="inputPassword">Password</label>
                        </div>
                        <div class="col-auto">
{#                            <a class="text-muted" href="forgot-password.html">#}
{#                                Forgot password?#}
{#                            </a>#}
                        </div>
                    </div>
                    <div class="position-relative">
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                        <span class="fa fa-eye-slash" id="toggle-password"></span>
                    </div>
                </div>
                <div class="form-group text-center">
                    <button class="btn btn-primary account-btn" type="submit">Ingreszar</button>
                </div>
                <div class="account-footer">
                    <p>No tienes una cuneta? <a href="{{ path('app_register') }}">Registrate</a></p>
                </div>
            </form>
            <!-- /Account Form -->
        </div>
    </div>
